{
  "name": "start-template",
  "version": "1.0.0",
  "type": "module",
  "description": "Стартовый шаблон сборки",
  "browserslist": [
    "last 3 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig & npm run stylelint & eslint source/js/",
    "build": "cross-env NODE_ENV=production gulp build",
    "start": "cross-env NODE_ENV=development gulp start",
    "webp": "gulp webp"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/**/*.html",
    "source/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "devDependencies": {
    "@babel/preset-env": "7.10.4",
    "@htmlacademy/editorconfig-cli": "^1.x",
    "autoprefixer": "^10.4.7",
    "babel-loader": "8.0.6",
    "browser-sync": "^2.27.10",
    "circular-dependency-plugin": "5.2.0",
    "clean-webpack-plugin": "3.0.0",
    "cross-env": "^7.0.3",
    "del": "^6.1.1",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint": "^8.20.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-dart-sass": "^1.0.2",
    "gulp-group-css-media-queries": "^1.2.2",
    "gulp-libsquoosh": "^1.1.2",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-posthtml": "^3.0.5",
    "gulp-rename": "^2.0.0",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "^9.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "^4.0.1",
    "postcss": "^8.4.14",
    "postcss-copy-assets": "^0.3.1",
    "postcss-csso": "^6.0.1",
    "postcss-url": "^10.1.3",
    "posthtml-include": "^1.7.4",
    "sass": "^1.53.0",
    "stylelint": "^14.9.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.10.0",
    "webpack-stream": "^5.2.1"
  }
}
