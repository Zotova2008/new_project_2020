{
  "name": "start-template",
  "version": "2.0.0",
  "type": "module",
  "description": "Стартовый шаблон сборки",
  "browserslist": [
    "last 3 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig & npm run stylelint & eslint source/js/",
    "build": "cross-env NODE_ENV=production gulp build",
    "dev": "cross-env NODE_ENV=production gulp dev",
    "start": "cross-env NODE_ENV=development gulp start",
    "webp": "gulp webp",
    "avif": "gulp avif"
  },
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/**/*.html",
    "source/**/*.pug",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "devDependencies": {
    "@babel/preset-env": "7.18.6",
    "@htmlacademy/editorconfig-cli": "1.x",
    "@linthtml/linthtml": "^0.9.5",
    "autoprefixer": "10.4.7",
    "babel-loader": "8.2.5",
    "browser-sync": "2.27.10",
    "circular-dependency-plugin": "5.2.2",
    "clean-webpack-plugin": "4.0.0",
    "cross-env": "7.0.3",
    "del": "6.1.1",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint": "7.32.0",
    "gulp": "4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-dart-sass": "^1.0.2",
    "gulp-group-css-media-queries": "1.2.2",
    "gulp-libsquoosh": "^1.1.2",
    "gulp-newer": "^1.4.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "9.0.1",
    "gulp-posthtml": "^3.0.5",
    "gulp-rename": "2.0.0",
    "gulp-stacksvg": "^2.0.2",
    "gulp-svgmin": "^4.1.0",
    "gulp-svgstore": "9.0.0",
    "linthtml-config-htmlacademy": "^1.0.12",
    "postcss": "8.4.14",
    "postcss-csso": "^6.0.1",
    "postcss-url": "^10.1.3",
    "posthtml-include": "^1.7.4",
    "sass": "1.53.0",
    "stylelint": "13.13.1",
    "swiper": "^9.0.2",
    "webpack": "4.42.0",
    "webpack-stream": "5.2.1"
  },
  "engines": {
    "node": ">=16.15.1"
  }
}
